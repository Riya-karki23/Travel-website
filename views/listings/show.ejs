<%layout("/layouts/boilerplate")%>

<div class="row">
  <div class="col-8 offset-3 mt-4">
    <h3>Listing Details</h3>
    </div>

    <div class="card col-6 offset-3" >
      <img src="<%=listing.image%>" class="card-img-top show-img" alt="image">
      <div class="card-body">
        <p class="card-text">
          <b>
            <%=listing.title%> </b><br>
            <%=listing.description%><br>
           &#8377; <%=listing.price.toLocaleString("en-IN")%><br>
            <%=listing.location%><br>
            <%=listing.country%>
        </p>
        </div>
        </div>
       <div class=" btns ">
       <a href="/listings/<%=listing._id%>/edit" class="btn edit-btn col-1 offset-3 ">Book now</a>
       
       <form method="POST" action="/listings/<%=listing._id%>?_method=delete">
      <button class="btn btn-dark  offset-5 ">Exit</button>
    </form></div>
  
    </div>



